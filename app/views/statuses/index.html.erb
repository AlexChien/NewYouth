<h1>Listing statuses</h1>

<table>
  <tr>
    <th>Screen name</th>    
    <th>Text</th>
    <th>Created Time</th>
  </tr>

<% @statuses.each do |status| %>
  <tr>
    <td><%=h status["user"]["screen_name"] %></td>    
    <td><%=h status["text"] %></td>
    <td><%=h status["created_at"] %></td>
    <td><%= link_to 'Show', status %></td>
    <td><%= link_to 'Edit', edit_status_path(status) %></td>
    <td><%= link_to 'Destroy', status, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Refresh', "javascript://location.reload();" %>